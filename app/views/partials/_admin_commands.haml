- no_show ||= nil
- no_edit ||= nil
- no_del  ||= nil
.btn-group.btn-group-sm.pull-right
  - unless no_show
    = button_tag class: 'btn btn-default' do
      = link_to content_tag( :span, '', class: 'glyphicon glyphicon-eye-open' ), klass

  - unless no_edit
    = button_tag class: 'btn btn-default' do
      = link_to content_tag( :span, '', class: 'glyphicon glyphicon-pencil' ),
          send('edit_' + klass.class.to_s.underscore + '_path', klass)

  - unless no_del
    = button_tag class: 'btn btn-default' do
      = link_to klass, :method => :delete, data: { confirm: 'Are you sure?' } do
        %span.glyphicon.glyphicon-trash

