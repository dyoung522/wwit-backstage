- move    ||= false
- show    ||= false
- edit    ||= true
- destroy ||= true
- uparrow ||= false

.admin-commands
  .pull-right
    .btn-group.btn-group-xs
      - if can? :destroy, klass and destroy == true
        = link_to get_icon(:delete, title: 'Delete'), klass, class: 'btn xbtn-default', :method => :delete,
                  data: { confirm: 'Delete this Record?  Are you sure?' }

      - if can? :edit, klass and edit == true
        = link_to get_icon(:edit, title: 'Edit'), send('edit_' + klass.class.to_s.underscore + '_path', klass), class: 'btn xbtn-default'

      - if can? :read, klass and show == true
        = link_to get_icon(:show, title: 'Show'), klass, class: 'btn xbtn-default'

      - if can? :move, klass and move == true
        .btn.xbtn-default
          .handle= get_icon :move, title: 'Reposition'

      - if uparrow
        = link_to get_icon(:'arrow-up', title: 'Go to Top'), '#top', class: 'btn xbtn-default scroll-to-top'

