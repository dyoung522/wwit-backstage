- move ||= false
- show = false if show.nil?
.admin-commands
  .pull-right
    .btn-group.btn-group-xs
      - if move == true
        .btn.xbtn-default
          %span.glyphicon.glyphicon-move.handle{ title: 'Reposition'}

      - if can? :read, klass and show == true
        = link_to klass, class: 'btn xbtn-default', title: 'Show' do
          %span.glyphicon.glyphicon-eye-open

      - if can? :edit, klass
        = link_to send('edit_' + klass.class.to_s.underscore + '_path', klass), class: 'btn xbtn-default', title: 'Edit' do
          %span.glyphicon.glyphicon-pencil

      - if can? :destroy, klass
        = link_to klass, class: 'btn xbtn-default', title: 'Delete', :method => :delete, data: { confirm: 'Are you sure?' } do
          %span.glyphicon.glyphicon-trash


