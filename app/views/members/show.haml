#member
  - unless @member.is_active?
    .pull-right
      %h3.inactive= 'INACTIVE'

  .row
    .col-md-6
      %h1
        = @member.name
        %small= mail_to @member.email
    .col-md-6
      %h4.text-right= @member.phones.by_type.map{|phone| link_to phone.listing, phone.as_tel_link}.join(' / ').html_safe

  .row
    - if @member.is_castable?
      .col-md-12
        .plaque
          %h3.no-top-pad Recent and Upcoming Shows
          - if @shows.empty?
            %p No upcoming Shows
          - else
            %table.table.table-condensed
              %th Date / Name
              %th Cast
              %th Crew
              - @shows.each do |show|
                %tr
                  %td.col-md-4= link_to "#{show.date} - #{show.name}", show_path(show)
                  %td.col-md-4
                    %ul
                      - show.actors.each do |member|
                        %li= link_to(member.name, member_path(member))
                  %td.col-md-4
                    %ul.list-unstyled
                      - show.shifts.each do |shift|
                        %li
                          .shift-code= shift.skill.code + ':'
                          = shift.member_link

  .row
    - if @member.is_crewable?
      .col-md-12
        .plaque
          %h3.no-top-pad Recent and Upcoming Shifts
          - if @shifts.empty?
            %p No upcoming Shifts
          - else
            %ul
              - @shifts.each do |shift|
                %li= link_to shift.text, show_path(shift.show)

  .row
    .col-md-12
      .box
        %h3.no-top-pad Latest Announcements

  .row
    - if @member.is_castable? or @member.is_crewable?
      .col-md-4
        .plaque
          %h3.no-top-pad Groups
          %ul
            - @member.roles.each do |role|
              %li= role.desc

      .col-md-4
        .plaque
          %h3.no-top-pad Skills
          - if @skills.empty?
            %p No Skills Assigned
          - else
            %ul
              - @skills.each do |skill|
                %li= skill.name

      .col-md-4
        .plaque
          %h3.no-top-pad Conflicts
          - if @conflicts.empty?
            %p No Conflicts
          - else
            %ul
              - @conflicts.each do |conflict|
                %li= conflict.date
          - if is_authorized?(@member)
            = link_to 'Manage Conflicts', manage_member_conflicts_path(@member)

  .row
    .col-md-12
      .well
        Notes
        = render 'notes/notes'
        = render 'notes/form'

- if can? :edit, @member
  = link_to 'Edit', edit_member_path(@member)

