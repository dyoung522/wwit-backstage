%fieldset.nested-fields.phones
  .col-md-11.col-md-offset-1
    .col-md-2
      = f.input_field :ntype, collection: @phone_types, include_blank: false, label: false
    .col-md-4
      = f.input_field :number, label: false
    .col-md-2
      = f.hidden_field :_destroy
      = link_to_remove_association button_tag('Remove Phone', class: [ 'btn', 'btn-default', 'btn-sm' ]), f
