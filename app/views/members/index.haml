#member-list
  .row
    .col-md-4
      %h1
        Members List
        %small.count
          = pluralize(@member_count, 'Member')
          = ( params[:search].nil? or params[:search].blank? ) ? 'Total' : 'Found'

    .col-md-4.col-md-offset-4
      = form_tag members_path, :method => 'get', role: 'form', class: 'pad-top-20 form-inline', id: 'member_search' do
        = search_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search'

  #members-table= render 'members_list'


