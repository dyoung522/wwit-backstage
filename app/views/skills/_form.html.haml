= simple_form_for @skill do |f|
  - if @skill.errors.any?
    #error_explanation
      %h2= "#{pluralize(@skill.errors.count, "error")} prohibited this skill from being saved:"
      %ul
        - @skill.errors.full_messages.each do |msg|
          %li= msg

  .field= f.input :code
  .field= f.input :name
  .field= f.input :description
  .field
    = f.label 'Training Required?'
    = f.input_field :training?
  .field= f.input_field :category, collection: @categories, include_blank: false
  .actions
    = f.submit 'Save'
