%h2 Sign in

.col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2
  #sign-in-form
    = simple_form_for( resource, :as => resource_name, :url => session_path(resource_name),
        input_html: { class: 'form-horizontal' } ) do |f|
      = f.input :email, :required => false, :autofocus => true
      = f.input :password, :required => false
      = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
      = f.button :submit, 'Sign in', class: [ 'btn', 'btn-default' ]

    = render "devise/shared/links"
